{
  "name": "mechanema",
  "version": "0.0.1",
  "description": "A collection of simple machines for redux.",
  "private": true,
  "main": "index.js",
  "author": "Christopher Roussel <christopher@impleri.net>",
  "license": "MIT",
  "devDependencies": {
    "@types/faker": "4.1.5",
    "@types/jest": "24.0.13",
    "@types/redux-immutable": "4.0.1",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jest": "22.5.1",
    "faker": "4.1.0",
    "immutable": "4.0.0-rc.12",
    "jest": "24.8.0",
    "lerna": "3.14.1",
    "moize": "5.4.4",
    "redux": "4.0.1",
    "redux-immutable": "4.0.0",
    "redux-saga": "1.0.2",
    "rollup": "1.12.3",
    "rollup-plugin-typescript2": "0.21.1",
    "ts-jest": "24.0.2",
    "tslib": "1.9.3",
    "typescript": "3.4.5"
  },
  "scripts": {
    "build": "lerna exec -- rollup -c ../../rollup.config.js",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "pretest": "npm run lint",
    "test": "npm run testonly",
    "testonly": "jest",
    "release": "echo 'Should create a publish script here'"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,jsx,ts,tsx}",
      "!packages/*/src/**/*.spec.{js,jsx,ts,tsx}",
      "!packages/*/src/**/*.d.{ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "preset": "ts-jest"
  }
}
