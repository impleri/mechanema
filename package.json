{
  "name": "mechanema",
  "version": "0.0.1",
  "description": "A collection of simple machines for redux.",
  "private": true,
  "main": "index.js",
  "author": "Christopher Roussel <christopher@impleri.net>",
  "license": "MIT",
  "devDependencies": {
    "@types/faker": "4.1.12",
    "@types/jest": "26.0.9",
    "@types/redux-immutable": "4.0.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint": "7.13.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-import-resolver-typescript": "2.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "faker": "4.1.0",
    "immutable": "4.0.0-rc.12",
    "jest": "25.5.4",
    "lerna": "3.22.1",
    "moize": "5.4.7",
    "redux": "4.0.5",
    "redux-immutable": "4.0.0",
    "redux-saga": "1.1.3",
    "rollup": "2.23.1",
    "rollup-plugin-typescript2": "0.27.2",
    "ts-jest": "25.5.1",
    "tslib": "2.0.1",
    "typescript": "3.8.3"
  },
  "scripts": {
    "build": "lerna exec -- rollup -c ../../rollup.config.js",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "pretest": "yarn lint",
    "test": "yarn testonly",
    "testonly": "jest",
    "release": "echo 'Should create a publish script here'"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,jsx,ts,tsx}",
      "!packages/*/src/**/*.spec.{js,jsx,ts,tsx}",
      "!packages/*/src/**/*.d.{ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "preset": "ts-jest"
  }
}
