{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018"
    ],
    "module": "es2015",
    "outDir": "dist",
    "target": "es2015",
    "newLine": "lf",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src",
    "packages"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
